Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/bionic64"
  config.vm.hostname = "nginx-vm"

  
  config.vm.network "public_network", type: "dhcp"

  # Sincronização de pasta (rsync mantém os arquivos locais)
  config.vm.synced_folder "./site", "/var/www/html", type: "rsync"

  # Configuração de recursos da máquina (Memória e CPU)
  config.vm.provider "virtualbox" do |vb|
    vb.memory = "1024"  # 1 GB de RAM
    vb.cpus = 1         # 1 CPU
  end

  # Provisionamento via shell script
  config.vm.provision "shell", path: "provision.sh", run: "always"
end
